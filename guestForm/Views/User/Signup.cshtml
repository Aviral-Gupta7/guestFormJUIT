@model User



    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary ">Sign Up</h2>
                <hr/>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">First Name *</label>
                <input asp-for="FirstName" class="form-control border" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Last Name</label>
                <input asp-for="LastName" class="form-control border" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Email *</label>
                <input asp-for="Email" type=""  class="form-control border" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="form-label p-0">Password *</label>
                <input asp-for="Password" type="password" class="form-control border" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row p-1">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control"><i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create Account</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="User" asp-action="Login" class="btn btn-secondary border form-control">Already Have an Account?</a>
                </div>
            </div>
        </div>
    </form>

